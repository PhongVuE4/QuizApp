<Window x:Class="UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views"
        xmlns:Controls="clr-namespace:UI.Controls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindown" Height="450" Width="800"
        Background="#FFFDFDFD"
        SizeToContent="Manual">

    <!-- Lớp ngoài cùng để tự động co giãn -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">

        <!-- DockPanel cho bố cục linh hoạt -->
        <DockPanel LastChildFill="True">

            <!-- TopBar co giãn theo chiều ngang -->
            <Controls:TopBar DockPanel.Dock="Top"
                             Height="Auto"
                             MinHeight="60"
                             VerticalAlignment="Top"
                             Background="#FF2E3A59"
                             FontSize="{Binding ActualWidth, 
                                        RelativeSource={RelativeSource AncestorType=Window}, 
                                        Converter={StaticResource WidthToFontSizeConverter}}" />

            <!-- Khung chính chiếm phần còn lại -->
            <Grid x:Name="MainGrid"
                  Margin="10"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>
            </Grid>
        </DockPanel>
    </ScrollViewer>
</Window>
