<Page x:Class="UI.Views.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizPage">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <DockPanel Background="#FAFAFA">

            <!-- 🔹 Header -->
            <Border Background="#4CAF50" DockPanel.Dock="Top" Padding="6">
                <TextBlock x:Name="TitleText"
                   Foreground="White"
                   FontSize="20"
                   FontWeight="Bold"/>
            </Border>

            <!-- 🔹 Footer Buttons -->
            <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10">
                <Button Content="⟨ Trước"
                Width="100"
                Height="36"
                Margin="5"
                Click="PrevButton_Click"/>

                <Button Content="Tiếp ⟩"
                Width="100"
                Height="36"
                Margin="5"
                Click="NextButton_Click"
                x:Name="NextButton"/>

                <Button Content="Nộp bài"
                Width="100"
                Height="36"
                Margin="5"
                Background="#4CAF50"
                Foreground="White"
                Click="SubmitButton_Click"/>
            </StackPanel>

            <!-- 🔹 Scrollable main content -->
            <ScrollViewer Padding="1">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Thay thế Spacing bằng Style Margin -->
                    <StackPanel.Resources>
                        <Style TargetType="FrameworkElement">
                            <Setter Property="Margin" Value="0,6,0,6"/>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Question -->
                    <TextBlock x:Name="QuestionText"
                       FontSize="{Binding ActualWidth, 
                      RelativeSource={RelativeSource AncestorType=Page},
                      Converter={StaticResource WidthToFontSizeConverter}}"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       TextAlignment="Justify"/>

                    <!-- Options -->
                    <ItemsControl x:Name="OptionsPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton
                            GroupName="Answers"
                            Content="{Binding Text}"
                            Tag="{Binding Text}"
                            Checked="Option_Checked"
                            FontSize="16"
                            Padding="8,4"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            Background="White"
                            Cursor="Hand"
                            Margin="0,4,0,4"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Viewbox>
</Page>
